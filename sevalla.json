{
  "name": "osa-frontend",
  "version": "1.0.0",
  "description": "Online Sharia Academy Frontend",
  "scripts": {
    "build": "ng build --configuration production",
    "start": "serve -s dist/osa-frontend/browser -l $PORT"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "@angular/cli": "^20.3.7"
  },
  "sevalla": {
    "buildCommand": "npm install && npm run build",
    "startCommand": "serve -s dist/osa-frontend/browser -l $PORT",
    "outputDir": "dist/osa-frontend/browser",
    "environment": {
      "NODE_ENV": "production"
    }
  }
}